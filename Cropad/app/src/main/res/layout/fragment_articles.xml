<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#32cb">

    <Button
        android:id="@+id/expertarticles"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="360dp"
        android:layout_height="192dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/roundbut"
        android:text="List of Expert Articles"
        android:textColor="#fafafa"
        android:textSize="30dp" />


    <Button
        android:id="@+id/favorite"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="360dp"
        android:layout_height="192dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/roundbut"
        android:text="My Favorite Articles"
        android:textColor="#fafafa"
        android:textSize="30dp" />

</RelativeLayout>
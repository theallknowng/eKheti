<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#32cb"
    tools:context=".fragment_articles">

    <Button
        android:id="@+id/expertarticles"
        android:layout_width="360dp"
        android:layout_height="192dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/roundbut"
        android:text="List of Expert Articles"
        android:textColor="#fafafa"
        android:textSize="30dp" />


    <Button
        android:id="@+id/favoritearticles"
        android:layout_width="360dp"
        android:layout_height="192dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/roundbut"
        android:text="My favorite articles"
        android:textColor="#fafafa"
        android:textSize="30dp" />

</RelativeLayout>
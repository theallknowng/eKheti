<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Market_list"
    android:background="#32cb">
<RelativeLayout
    android:id="@+id/marketList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    >

    <EditText
        android:id="@+id/crop"
        android:layout_width="370dp"
        android:layout_height="56dp"
        android:background="@drawable/crad_round"
        android:gravity="center_vertical"
        android:hint="Enter Crop Name to sell"
        android:padding="10dp"
        android:textColor="#fafafa"
        android:textColorHint="#fafafa"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/marketButton"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="301dp"
        android:layout_marginLeft="301dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/searchbutton"
        android:gravity="right"
        android:padding="10dp"
        />

</RelativeLayout>
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/market_list_recyclerview"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_below="@+id/marketList"
    />
</RelativeLayout>
































<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_gradient"
    tools:context=".FragmentMarket">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="245dp"
        app:srcCompat="@drawable/market1"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/nearbymarketplace"
        android:layout_width="360dp"
        android:layout_height="102dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/roundbut"
        android:text="Nearby Market Place"
        android:textColor="#fafafa"
        android:textSize="30dp" />


    <Button
        android:id="@+id/addmarket"
        android:layout_width="360dp"
        android:layout_height="102dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/roundbut"
        android:text="Add Market"
        android:textColor="#fafafa"
        android:textSize="30dp" />

</RelativeLayout>